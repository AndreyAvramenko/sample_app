<% provide(:title, 'Edit user') %>
<h1>Update profile</h1>
<div class="container" >
<div class="row" >
	
	<div class="col-md-6 col-md-offset-3" >
		<%= form_for(@user) do |f| %>
		<%= render 'fields', f: f %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
		<br>
		<%= gravatar_for @user%>
		<a href="http://gravatar.com/emails" target="_blank"> Change </a>
	</div>
	
</div>	
</div>
